{
  "manifest_version": 2,
  "name": "Note Search",
  "description": "跨平台笔记库搜索场景植入",
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "version": "0.0.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://hm.baidu.com https://cdn.jsdelivr.net https://www.google.com/ https://ajax.googleapis.com/; object-src 'self'",
  "options_ui": {
    "page": "index.html",
    "open_in_tab": false
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": ["libs/juqery.js", "libs/Readability.js", "content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    },
    {
      "js": ["libs/juqery.js", "api.js"],
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "index.html",
    "images/*"
  ],
  "background": {
    "scripts": [
      "libs/juqery.js",
      "libs/jquery.xmlrpc.min.js",
      "libs/aliyun-oss-sdk.min.js",
      "libs/hmac-sha256.js",
      "libs/enc-base64-min.js",
      "libs/google-analytics-bundle.js",
      "background.js"
    ]
  }
}
